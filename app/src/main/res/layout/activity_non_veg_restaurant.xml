<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NonVegRestaurant"
    android:background="@color/white">

    <ImageView
        android:id="@+id/leftarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="19.50dp"
        android:layout_marginTop="6.5dp"
        android:src="@drawable/leftarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvExpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6.5dp"
        android:text="Non Veg Restaurant"
        android:textSize="23.4sp"
        android:textStyle="bold"
        android:textColor="#282726"
        app:layout_constraintStart_toEndOf="@+id/leftarrow"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginHorizontal="19.5dp"
        android:layout_marginTop="16dp"
        android:textSize="15.6sp"
        android:queryHint="What would you like to eat?"
        android:background="@drawable/search_border"
        android:inputType="textPersonName"
        android:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftarrow" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:background="#fff">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/NVR_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/activity_non_veg_restaurant_list_item" />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


