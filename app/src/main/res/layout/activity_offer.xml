<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.OfferActivity">

<ScrollView
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:background="#fff"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/leftarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="19.50dp"
        android:layout_marginTop="6.5dp"
        android:src="@drawable/leftarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tvOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6.5dp"
        android:text="@string/offers"
        android:textSize="23.4sp"
        android:textStyle="bold"
        android:textColor="#282726"
        app:layout_constraintStart_toEndOf="@+id/leftarrow"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView1"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginHorizontal="19.5dp"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:queryHint="What would you like to eat?"
        android:background="@drawable/search_border"
        android:inputType="textPersonName"
        android:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="@id/leftarrow"
        app:layout_constraintStart_toStartOf="@+id/leftarrow"
        app:layout_constraintTop_toBottomOf="@+id/leftarrow"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Offer_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/searchView1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/searchView1"
        app:layout_constraintTop_toBottomOf="@+id/searchView1"
        tools:listitem="@layout/offer_list_item" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_bar"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>