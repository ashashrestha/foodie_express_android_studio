<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OreoMilkShake"
    android:background="#fff"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <LinearLayout
        android:id="@+id/lyoreo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#A4C8FD"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/leftarrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/belowlogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_line"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="99dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="105dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mimosapizza"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/oreo1"
            app:strokeColor="#fff"
            app:strokeWidth="0.1dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lyOreoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvOreo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Oreo Milkshake"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            />

        <TextView
            android:id="@+id/tvOreodesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oreo Milkshake is made up of ingredients such as ice-cream, milk, chocolate sauce and oreos."
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOreo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/OreoOfferP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NRS 350"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="14.5sp"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="5dp"
        android:background="#ececec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyOreoDesc"/>

    <ImageView
        android:id="@+id/mimosalogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/mimosapizza"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"/>

    <TextView
        android:id="@+id/tvMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mimosa Pizza"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toEndOf="@+id/mimosalogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1 km from you"
        android:textColor="#ccc"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvMP"
        app:layout_constraintStart_toEndOf="@+id/mimosalogo"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="5dp"
        android:background="#ececec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mimosalogo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/minus1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="6dp"
            android:src="@drawable/plus1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btAddtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Add to cart"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>